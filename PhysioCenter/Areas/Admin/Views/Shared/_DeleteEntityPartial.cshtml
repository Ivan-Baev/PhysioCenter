@using PhysioCenter.Models.Appointments
@model AppointmentViewModel

        <form class="col-6 mt-5 text-center offset-md-3" style="font-weight: bold">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Appointment:</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.DateTime</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Client name: </label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.ClientFullName</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Therapist name: </label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.TherapistFullName</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Service: </label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.ServiceName</div>
                </div>
            </div>
        </form>
