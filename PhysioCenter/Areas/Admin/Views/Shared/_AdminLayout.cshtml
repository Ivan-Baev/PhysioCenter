@using PhysioCenter


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <div class="container px-5">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">PhysioCenter</a>
            <a href="#menu-toggle" class="btn btn-dark" id="menu-toggle">Menu</a>
            <input class="form-control form-control-dark w-50" type="text" placeholder="Search" aria-label="Search" id="searchAdmin">
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My account</a>
                </div>
            </div>
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="container px-5">
        <partial name="_AdminSidebarPartial" />
    </div>
            <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
    @RenderBody()
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">

            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; PhysioCenter, 2022</div></div>
            </div>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu-toggle.js" asp-append-version="true"></script>
    <script src="~/js/search-admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
