@using PhysioCenter.Models.Blogs
@model BlogViewModel

@{
    ViewData["Title"] = "Delete Blog";
}

        <h4 class="text-danger text-center">
            <strong>Are you sure you want to delete this?</strong>
        </h4>
                <form class="col-6 mt-5 text-center offset-md-3" style="font-weight: bold">
            <div class="form-group row ">
                <label class="col-sm-4 col-form-label">Title</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.Title</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Content: </label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.Content</div>
                </div>
            </div>
        </form>

        <div class="text-center" style="margin-top: 30px">
            <div class="row ml-5">
                <form method="post">
                    <button type="submit" class="btn btn-danger"
                            asp-controller="Blogs"
                            asp-action="Delete"
                            asp-route-id="@Model.Id"
                            asp-route-imageUrl="@Model.ImageUrl">
                        Yes, Delete It!
                    </button>
                </form>
                <div class="ml-5" style="margin-top: 2px">
                    <a class="btn btn-success" asp-controller="Blogs"
                       asp-action="Index">
                        No, Go Back
                    </a>
                </div>
            </div>
        </div>
