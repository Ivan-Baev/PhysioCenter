<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhysioCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", false)
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PhysioCenter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Standard User") || !User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="BookAppointment">Book now</a>
                            </li>
                        }
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Standard User"))
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reviews" asp-action="Index">Leave a review</a>
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Index">Our blog</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Therapists" asp-action="Index">Meet our team</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Services" asp-action="Index">Our Services</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a></li>
                    <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
            <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid container px-5">
                <partial name="_CookieConsentPartial" />
                <div class="row">
                    <div class="col-lg-12">
    @RenderBody()
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; PhysioCenter, 2022</div></div>
                <div class="col-auto">
                    <a class="link-light small" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" asp-area="" asp-controller="Home" asp-action="Contacts">Contact us</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/canvasTest.js" asp-append-version="true"></script>
    <script src="~/js/alert-hide.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
