@{
     ViewData["Title"] = "Chat";
 }

 <h1>Welcome to the chat room!</h1>
 <canvas hidden id=c></canvas>
 <div class="container">
     <div class="row">&nbsp;</div>
         <div class="col-4"><input type="text" id="senderInput" hidden value=@User.Identity.Name></div>
     <div class="row">
         <div class="col-4"><input type="text" id="receiverInput" hidden value="admin@physiocenter.com" /></div>
     </div>
     <div class="row">
         <div class="col-2"><h2>Message</h2></div>
         <div class="col-4"><textarea id="messageInput" style="width: 900px; height: 100px;"></textarea></div>
     </div>
     <div class="row">&nbsp;</div>
     <div class="row">
         <div class="col-6">
             <input type="button" class="btn btn-primary btn-lg px-4 me-sm-3" id="sendButton" value="Send Message" />
         </div>
     </div>
 </div>
 <div class="row">
     <div class="col-12">
         <hr />
     </div>
 </div>
 <div class="row">
     <div class="col-6">
         <ul id="messagesList"></ul>
     </div>
 </div>
 <script src="~/js/signalr/dist/browser/signalr.js"></script>
 <script src="~/js/chat.js"></script>