@{
     ViewData["Title"] = "Chat";
 }

 <h1>Index</h1>
 <canvas hidden id=c></canvas>
 <div class="container">
     <div class="row">&nbsp;</div>
         <div class="col-4"><input type="text" id="senderInput" hidden value=@User.Identity.Name></div>
     <div class="row">
         <div class="col-4"><input type="text" id="receiverInput" hidden value="admin@physiocenter.com" /></div>
     </div>
     <div class="row">
         <div class="col-2">Message</div>
         <div class="col-4"><input type="text" id="messageInput" /></div>
     </div>
     <div class="row">&nbsp;</div>
     <div class="row">
         <div class="col-6">
             <input type="button" id="sendButton" value="Send Message" />
         </div>
     </div>
 </div>
 <div class="row">
     <div class="col-12">
         <hr />
     </div>
 </div>
 <div class="row">
     <div class="col-6">
         <ul id="messagesList"></ul>
     </div>
 </div>
 <script src="~/js/signalr/dist/browser/signalr.js"></script>
 <script src="~/js/chat.js"></script>