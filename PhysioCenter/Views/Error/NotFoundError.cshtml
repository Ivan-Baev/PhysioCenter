@model ErrorViewModel

@{
    this.ViewData["Title"] = "Error 404";
}

@section Styles {
<link href="~/css/notFound.scss rel="stylesheet" />
}

<div class="page-wrap d-flex flex-row align-items-center text-white mt-5">
    <canvas id=c></canvas>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <span class="display-1 d-block">Error Status: @Model.StatusCode</span>
                <div class="mb-4 lead">The page you are looking for was not found.</div>
                <a href="/" class="btn btn-link">Back to Home</a>
            </div>
        </div>
    </div>
</div>
