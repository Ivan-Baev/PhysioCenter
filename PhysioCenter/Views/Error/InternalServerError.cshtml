@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="page-wrap d-flex flex-row align-items-center text-white mt-5">
    <canvas id=c></canvas>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <span class="display-1 d-block">Error Status: @Model.StatusCode</span>
                <div class="mb-4 lead">Something went wrong proccessing your request. Please contact the support team for further assistance.</div>
                <a href="/" class="btn btn-link">Back to Home</a>
            </div>
        </div>
    </div>
</div>
