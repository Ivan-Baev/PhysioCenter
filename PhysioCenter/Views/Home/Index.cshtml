@using PhysioCenter.Models.Home
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (TempData.ContainsKey("SuccessfullyAdded"))
{
    <div id="mainAlertMessage" class="alert alert-success text-center alert-dismissible" role="alert">
        @TempData["SuccessfullyAdded"]
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<body class="d-flex flex-column h-100">
    <div>
        <main>
            <header class="py-5">
                <div class="container px-5">
                    <div class="row gx-5 align-items-center justify-content-center">
                        <div class="col-lg-8 col-xl-7 col-xxl-6">
                            <div class="my-5 text-center text-xl-start">
                                <h1 class="display-5 fw-bolder text-white mb-2">Get Back to What You Love</h1>
                                <p class="lead fw-normal text-white-50 mb-4"></p>
                                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                                    <a class="btn btn-primary btn-lg px-4 me-sm-3" href="#features">Get Started</a>
                                    <a class="btn btn-outline-light btn-lg px-4" asp-controller="Services" asp-action="Index">Learn More</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="https://res.cloudinary.com/physiocenter/image/upload/v1648640572/PhysioCenter%20Images/physiotherapy_zeel9v.jpg" alt="..." /></div>
                    </div>
                </div>
            </header>
            <!-- Features section-->
            <section class="py-5" id="features" style="color:white;">
                <div class="container px-5 my-5">
                    <canvas id=c></canvas>
                    <div class="row gx-5">
                        <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">A better way to start healing.</h2></div>
                        <div class="col-lg-8">
                            <div class="row gx-5 row-cols-1 row-cols-md -2">
                                <div class="col mb-5 h-100">
                                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-exclamation-lg"></i></div>
                                    <h2 class="h5">Having chronic pain?</h2>
                                    <p class="mb-0">Chronic pain can be physically, mentally and emotionally crippling — and it’s not easy to remedy. There is a better way: Movement.</p>
                                </div>
                                <div class="col mb-5 h-100">
                                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-exclamation-diamond"></i></div>
                                    <h2 class="h5">There is no wrong posture!</h2>
                                    <p class="mb-0">Posture is simply the position you’re holding yourself. It will and can vary depending on your circumstances. </p>
                                </div>
                                <div class="col mb-5 mb-md-0 h-100">
                                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-layout-sidebar-inset-reverse"></i></div>
                                    <h2 class="h5">Your trusted therapy partner</h2>
                                    <p class="mb-0">We’re here to give you the individualized care, healing, strength and confidence you need to get back to living the kind of life you want.</p>
                                </div>
                                <div class="col h-100">
                                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                                    <h2 class="h5">Patient success stories</h2>
                                    <p class="mb-0">Over the years we have helped thousands of people love life again!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Testimonial section-->
            <section class="py-5" id="features" style="color:white;">
                <h2 style="text-align: center">Client testimonials:</h2>
                <div class="container px-5 my-5">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Reviews.Count() - 1; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row gx-5 justify-content-center">
                                        <div class="col-lg-10 col-xl-7">
                                            <div class="text-center">
                                                <div class="fs-4 mb-4 fst-italic">@Model.Reviews[i].Content</div>
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="fw-bold">
                                                        Client: @Model.Reviews[i].ClientFullName
                                                        <span class="fw-bold text-primary mx-1"> --> </span>
                                                        Therapist: @Model.Reviews[i].TherapistFullName
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </section>
            <!-- Blog preview section-->
            <section class="py-5">
                <div class="container px-5 my-5">
                    <div class="row gx-5 justify-content-center" style="color: white;">

                        <div class="col-lg-8 col-xl-6">
                            <div class="text-center">
                                <h2 class="fw-bolder">From our blog</h2>
                                <p class="lead fw-normal text-muted mb-5"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-5">
                        @foreach (var blog in @Model.Blogs.Take(3))
                        {
                            <div class="col-lg-4 mb-5">
                                <div class="card h-100 shadow border-0">
                                    <img class="card-img-top" src="@blog.ImageUrl" alt="..." />
                                    <div class="card-body p-4">
                                        <div class="badge bg-primary bg-gradient rounded-pill mb-2">News</div>
                                        <a class="text-decoration-none link-dark stretched-link" href='@Url.Action("Details", "Blogs", new { blogId = @blog.Id })'><div class="h5 card-title mb-3">@blog.Title</div></a>
                                        <p style="white-space:nowrap; overflow:hidden">@blog.Content...</p>
                                    </div>
                                    <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                                        <div class="d-flex align-items-end justify-content-between">
                                            <div class="d-flex align-items-center">
                                                <div class="small">
                                                    <div class="fw-bold">PhysioCenter</div>
                                                    <div class="text-muted">March 12, 2021 &middot; 6 min read</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Call to action-->
                    <aside class="bg-gradient rounded-3 p-4 p-sm-5 mt-5" style="color:transparent;">
                        <div class="d-flex align-items-center justify-content-between flex-column flex-xl-row text-center text-xl-start">
                            <div class="mb-4 mb-xl-0">
                                <div class="fs-3 fw-bold text-white"><a class="nav-link" asp-controller="Appointments" asp-action="BookAppointment">Book your appointment now!</a></div>
                                <div class="text-white-50">Register for our services and get access to the booking system.</div>
                            </div>
                            <div class="ms-xl-4">
                                <div class="input-group mb-2">
                                    <a class="btn btn-outline-light" id="button-newsletter" type="button" href="/Identity/Account/Register">Register an account</a>
                                </div>
                                <div class="small text-white-50">We care about privacy, and will never share your data.</div>
                            </div>
                        </div>
                    </aside>
                </div>
            </section>
        </main>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
